-# frozen_string_literal: true
= simple_form_for(@like) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :user
    = f.association :comment
    = f.input :like_type

  .form-actions
    = f.button :submit
