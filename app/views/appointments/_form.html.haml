-# frozen_string_literal: true
= simple_form_for(@appointment) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :user
    = f.association :table
    = f.input :time_start
    = f.input :people_amount
    = f.input :date

  .form-actions
    = f.button :submit
