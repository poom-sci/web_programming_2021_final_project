-# frozen_string_literal: true
= simple_form_for(@rate) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :user
    = f.association :restaurant
    = f.input :rate_score

  .form-actions
    = f.button :submit
